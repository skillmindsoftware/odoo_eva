<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">
        <!-- <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="custom_web_theme.product_card_snippet" t-thumbnail="/custom_web_theme/static/src/img/snippets/product_card.png"/>
        </xpath> -->
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">Custom Theme</div>
                <div class="o_panel_body">
                    <!-- <t t-snippet="custom_web_theme.product_card_snippet" t-thumbnail="/custom_web_theme/static/src/img/snippets/product_card.png"> -->
                    <t t-snippet="custom_web_theme.product_card_snippet" string="Product" t-thumbnail="/website/static/src/img/snippets_thumbs/s_banner.svg">
                        <keywords>hero, jumbotron</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>